<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/maintenance_log_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/md_theme_primaryContainer_mediumContrast"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/maintenance_log_row_service_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type"
                android:textSize="24sp"
                android:paddingTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/maintenance_log_row_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:textSize="16sp"
                android:paddingTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintStart_toEndOf="@id/maintenance_log_row_service_type"
                app:layout_constraintBottom_toBottomOf="@id/maintenance_log_row_service_type" />

            <TextView
                android:id="@+id/maintenance_log_row_cost_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/costColin"
                android:textSize="16sp"
                android:paddingTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                app:layout_constraintStart_toStartOf="@id/maintenance_log_row_service_type"
                app:layout_constraintTop_toBottomOf="@id/maintenance_log_row_service_type" />

            <TextView
                android:id="@+id/maintenance_log_row_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cost"
                android:textSize="16sp"
                android:paddingTop="16dp"
                android:paddingStart="0dp"
                android:paddingEnd="16dp"
                app:layout_constraintStart_toEndOf="@id/maintenance_log_row_cost_title"
                app:layout_constraintTop_toBottomOf="@id/maintenance_log_row_service_type" />

            <TextView
                android:id="@+id/maintenance_log_row_miles_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/milesColin"
                android:textSize="16sp"
                android:paddingTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                app:layout_constraintStart_toEndOf="@id/maintenance_log_row_cost"
                app:layout_constraintTop_toBottomOf="@id/maintenance_log_row_service_type" />

            <TextView
                android:id="@+id/maintenance_log_row_miles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/miles"
                android:textSize="16sp"
                android:paddingTop="16dp"
                android:paddingStart="0dp"
                android:paddingEnd="16dp"
                app:layout_constraintStart_toEndOf="@id/maintenance_log_row_miles_title"
                app:layout_constraintTop_toBottomOf="@id/maintenance_log_row_service_type" />

            <TextView
                android:id="@+id/maintenance_log_row_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notes"
                android:textSize="16sp"
                android:paddingTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                app:layout_constraintStart_toStartOf="@id/maintenance_log_row_cost_title"
                app:layout_constraintTop_toBottomOf="@id/maintenance_log_row_cost_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
