<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/md_theme_secondaryContainer"
    android:padding="16dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="110dp"
            android:textSize="20sp"
            android:text="@string/name"/>

        <EditText
            android:id="@+id/add_car_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:width="240dp"
            android:height="48dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="110dp"
            android:textSize="20sp"
            android:text="@string/year"/>

        <EditText
            android:id="@+id/add_car_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:width="240dp"
            android:height="48dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="110dp"
            android:textSize="20sp"
            android:text="@string/make"/>

        <EditText
            android:id="@+id/add_car_make"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:width="240dp"
            android:height="48dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="110dp"
            android:textSize="20sp"
            android:text="@string/model"/>

        <EditText
            android:id="@+id/add_car_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:width="240dp"
            android:height="48dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="110dp"
            android:textSize="20sp"
            android:text="@string/miles"/>

        <EditText
            android:id="@+id/add_car_miles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:width="240dp"
            android:height="48dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/add_car_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="350dp"
            android:textSize="20sp"
            android:padding="14dp"
            android:visibility="gone"
            android:background="@color/md_theme_errorContainer"
            android:text="@string/defaultErrorMessage"/>

    </LinearLayout>

    <Button
        android:id="@+id/add_car_submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:paddingBottom="14dp"
        android:paddingTop="14dp"
        android:backgroundTint="@color/md_theme_primary"
        android:text="@string/addCar"/>

</LinearLayout>